<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_static_music_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:scaleType="fitCenter"
    tools:context="com.runningmusic.fragment.StaticMusicPlayFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/static_music_mengban"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@mipmap/musicpage_translucent_bg1"/>

    <RelativeLayout
        android:id="@+id/music_static_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/static_music_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yinyuejiemian_xiala"
            android:clickable="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/horizontal_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_static_header">

        <com.runningmusic.view.RecyclerViewPager
            android:id="@+id/static_list"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:clipToPadding="false"
            android:paddingRight="30dp"
            android:paddingLeft="35dp"
            android:paddingBottom="0dp"
            android:layout_centerHorizontal="true"
            app:rvp_singlePageFling="true"
            app:rvp_triggerOffset="0.1" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/music_static_title_artiest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_list_container">

        <TextView
            android:id="@+id/music_static_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="I`ll wait for you"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:maxEms="25"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/music_static_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_static_title"
            android:layout_centerHorizontal="true"
            android:text="Iris"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="20"
            android:singleLine="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/static_music_panel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/music_control_panel_static"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/music_control_steps_per_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="STEPS/MIN"
                android:textColor="@color/light_grey"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/music_control_current_bpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="12dp"
                    android:text="150"
                    android:textColor="@color/light_grey"
                    android:textSize="52dp" />


                <ImageView
                    android:id="@+id/bpm_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/music_control_current_bpm"
                    android:background="@mipmap/yinyuejiemian_increase" />

                <ImageView
                    android:id="@+id/bpm_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/music_control_current_bpm"
                    android:background="@mipmap/yinyuejiemian_decrease" />

            </RelativeLayout>


        </RelativeLayout>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/static_music_control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/static_music_panel"
        android:layout_below="@id/music_static_title_artiest">

        <ImageView
            android:id="@+id/static_music_play_or_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/yinyuejiemian_play" />

        <ImageView
            android:id="@+id/static_music_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@id/static_music_play_or_pause"
            android:background="@mipmap/yinyuejiemian_previous" />

        <ImageView
            android:id="@+id/static_music_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/static_music_play_or_pause"
            android:background="@mipmap/yinyuejiemian_next" />
    </RelativeLayout>


</RelativeLayout>
