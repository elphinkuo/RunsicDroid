<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.runningmusic.runninspire.AdStartActivity">


    <RelativeLayout
        android:id="@+id/ad_start_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark">

        <ImageView
            android:id="@+id/ad_start_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@mipmap/ad_start_logo" />


        <RelativeLayout
            android:id="@+id/ad_start_enjoy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ad_start_logo">


            <ImageView
                android:id="@+id/ad_start_enjoy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:background="@mipmap/ad_start_enter" />

            <TextView
                android:id="@+id/ad_start_enjoy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ad_start_enjoy_image"
                android:text="ENJOY"
                android:textColor="@color/text_bright_white"
                android:textSize="14dp" />

        </RelativeLayout>


    </RelativeLayout>



    <ImageView
        android:id="@+id/runninspire_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ad_start_bottom"
        android:background="@mipmap/rsbg_background"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/shoufa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ad_start_bottom"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/shoufa_yingyongbao"
        android:visibility="visible"/>
</RelativeLayout>
