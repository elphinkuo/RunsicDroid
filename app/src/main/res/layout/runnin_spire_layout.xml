    <com.runningmusic.view.PulseView
        android:id="@+id/pulse_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/runninspire_header"
        android:layout_centerHorizontal="true"/>



    <include
        layout="@layout/runsic_data_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/music_progress_move"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />


    <RelativeLayout
        android:id="@+id/fragment_container_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" />


    <com.runningmusic.view.ArcProgress
        android:id="@+id/music_progress_move"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        custom:arc_angle="37"
        custom:arc_stroke_width="2dp">

    </com.runningmusic.view.ArcProgress>

    <RelativeLayout
        android:id="@+id/music_control_panel_move"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true">

        <Chronometer
            android:id="@+id/music_playing_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:focusable="false"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/music_playing_cover_thumb"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:background="@mipmap/placeholder_image" />


        <ImageView
            android:id="@+id/music_move_play_or_pause"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="28dp"
            android:layout_marginRight="16dp"
            android:background="@mipmap/play" />

        <TextView
            android:id="@+id/music_playing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/music_playing_artist"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:text="Song name"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="18"
            android:maxLines="1"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/music_playing_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxEms="20"
            android:maxLines="1"
            android:text="Artist"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/music_control_panel_static"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/music_control_steps_per_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="STEPS/MIN"
            android:textColor="@color/light_grey"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/music_control_current_bpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:text="150"
                android:textColor="@color/light_grey"
                android:textSize="52dp" />


            <ImageView
                android:id="@+id/bpm_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/music_control_current_bpm"
                android:background="@mipmap/yinyuejiemian_increase" />

            <ImageView
                android:id="@+id/bpm_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:layout_toLeftOf="@id/music_control_current_bpm"
                android:background="@mipmap/yinyuejiemian_decrease" />

        </RelativeLayout>


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/runninspire_header"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_corner_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@mipmap/gedanjiemian_liebiao"
            android:clickable="true" />

        <TextView
            android:id="@+id/runninspire_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Running Music"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/list_corner_right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/on_line"/>
    </RelativeLayout>

</RelativeLayout>